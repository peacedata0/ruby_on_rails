<h1><%= @post.title %></h1>

<div class="d-online p-2 bg-dark text-white btn-float-right">
  <%= link_to 'Изменить', edit_post_path(@post), class: 'btn btn-outline-primary pull-xs-right' %>
  <%= link_to 'Удалить', post_path(@post), method: :delete, data: {confirm: 'Не, серьезно?'}, class: 'btn btn-outline-primary pull-xs-right' %>
</div>

<p class="text text-justify first-line"><%= @post.body %></p>